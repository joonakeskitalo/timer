{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timer",
  "version": "0.1.5",
  "identifier": "com.joonikko.timer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Timer",
        "width": 480,
        "height": 230,
        "maxHeight": 230,
        "maxWidth": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "copyright": "Joona Keskitalo",
    "homepage": "https://joonakeskitalo.github.io/",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
